@model List<ApplicationUser>

<div class="row mx-0 justify-content-center pt-5">
    <div class="col-lg-6">
        <div class="section-title text-center position-relative mb-4">
            <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">Our Instructors</h6>
            <h1 class="display-4">Checkout Our Instructors</h1>
        </div>
    </div>
</div>
<div class="container" style="margin-top:100px;">
    <div class="row flex-row">
        @foreach (var instructor in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="team-item">
                    <img class="img-fluid w-100" src="/assets/Images/User/@instructor.ImagePath" alt="">
                    <div class="bg-light text-center p-4">
                        <h5 class="mb-3">@instructor.DisplayName</h5>
                        <p class="mb-2">Web Design &amp; Development</p>
                        <a asp-action="Details" asp-controller="Instructor" asp-route-Id="@instructor.Id" class="mb-2">Profile</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .team-item {
        margin-bottom: 30px; 
    }
</style>
