@model IReadOnlyList<Course>

<div class="course-container">

    @foreach (var course in Model)
    {

        <div class="course">
            <div class="course-preview">

                <img src="/assets/Images/course/@course.ImagePath" style="width:100%;" />
            </div>
            <div class="course-info d-flex ">
                <div style="width:70%;">
                    <h6>Chapter 4</h6>
                    <h2>@course.Name</h2>
                    <h6 class="mt-3">@course.Description</h6>
                </div>
                <div>

                    <div class="progress-container">
                        <div class="progress"></div>
                        <span class="progress-text">
                            6/9 Challenges
                        </span>
                    </div>
                </div>

                <a asp-action="CourseContent" asp-controller="Course" asp-route-id="@course.Id" class="cutombtn" style="text-decoration: none;
    color: white;
}">Continue</a>
            </div>
        </div>

    }
</div>
