@model IReadOnlyList<Course>

<div class="row mx-0 justify-content-center pt-5">
    <div class="col-lg-6">
        <div class="section-title text-center position-relative mb-4">
            <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">
                 Your
                Enrolled courses
            </h6>
            <h1 class="display-4">
                Enrolled courses
            </h1>
        </div>
    </div>
</div>
<div class="course-container">
    @foreach (var course in Model)
    {
        <div class="course">
            <div class="course-image">
                <img src="/assets/Images/course/@course.ImagePath" alt="@course.Name" />
            </div>
            <div class="course-info">
                <h2>@course.Name</h2>
                <p>@course.Description.Substring(0,100)....</p>

                <a asp-action="CourseContent" asp-controller="Course" asp-route-id="@course.Id" class="custom-btn">Continue</a>
            </div>
        </div>
    }
</div>

<style>
    .course-container {
        margin: 50px auto;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }

    .course {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
        margin: 15px;
        width: 300px;
        overflow: hidden;
        transition: transform 0.2s;
    }

        .course:hover {
            transform: translateY(-5px);
        }

    .course-image img {
        width: 100%;
        height: 150px;
        object-fit: cover;
    }

    .course-info {
        padding: 20px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
    }

        .course-info h6 {
            font-size: 14px;
            color: #777;
            margin-bottom: 5px;
            text-transform: uppercase;
        }

        .course-info h2 {
            font-size: 18px;
            color: #333;
            margin-bottom: 10px;
        }

        .course-info p {
            font-size: 14px;
            color: #555;
            margin-bottom: 15px;
        }

    .progress-container {
        margin-bottom: 15px;
    }

    .progress {
        background-color: #ddd;
        border-radius: 3px;
        height: 5px;
        width: 100%;
        position: relative;
    }

        .progress::after {
            border-radius: 3px;
            background-color: #2A265F;
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            height: 5px;
            width: 66%;
        }

    .progress-text {
        font-size: 12px;
        color: #777;
        margin-top: 5px;
        text-align: right;
    }

    .custom-btn {
        background-color: #2A265F;
        border: none;
        border-radius: 5px;
        color: #fff;
        font-size: 14px;
        padding: 10px 15px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        transition: background-color 0.2s;
    }

        .custom-btn:hover {
            background-color: #1d1a45;
        }
</style>
