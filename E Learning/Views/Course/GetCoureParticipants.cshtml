@model IReadOnlyList<StudentCourse>

<div class="container">
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead class="thead-light">
                <tr>
                    <th>#</th> 
                    <th>Name</th>
                    <th>Total Marks</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var counter = 1; 
                }
                @foreach (var item in Model)
                {
                    <tr class="@((item.User.Id == ViewBag.UserId) ? "user-highlight" : "")">
                        <td>@counter</td> <!-- Display current counter value -->
                        <td>@Html.DisplayFor(modelItem => item.User.DisplayName)</td>
                        <td>@Html.DisplayFor(modelItem => item.TotalMark)</td>  
                    </tr>
                    counter++; 
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .table {
        border-radius: 10px; 
    }

    .table-bordered th,
    .table-bordered td {
        border: 1px solid #ddd; 
    }

    .table-hover tbody tr:hover {
        background-color: #f5f5f5; 
        cursor: pointer; /* Pointer cursor on hover */
    }

    .thead-light th {
        background-color: #f0f0f0; 
        border-top: none; /* No top border for header */
    }

    .user-highlight {
        background-color: #def; 
    }
</style>
