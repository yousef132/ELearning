@model IReadOnlyList<Course>




<div class="row mx-0 justify-content-center pt-5">
    <div class="col-lg-6">
        <div class="section-title text-center position-relative mb-4">
            <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">Our Courses</h6>
            <h1 class="display-4">Checkout Our Courses</h1>
        </div>
    </div>
</div>
<div class="container" style="margin-top:100px;">
    <div class="row">
        @foreach (var course in Model)
        {
            <div class="col-md-4">
                <div class="card">
                    <img class="card-img-top" src="~/assets/Images/course/@course.ImagePath" alt="Card image">
                    <div class="card-body">
                        <h4 class="card-title">@course.Name</h4>
                        <p class="card-text"></p>
                        <a asp-action="Details" asp-controller="Course" asp-route-Id="@course.Id" class="btn btn-primary">Courser Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>