                </li>
                @for (int i = 0; i < Math.Ceiling(Model.Count / 6.0); i++)
                {
                    <li class="page-item"><a class="page-link" onclick="FilterSearchCourses(@i+1)">@i+1</a></li>
                }
                <li class="page-item">
                    <a class="page-link" href="#">Next</a>
                </li>
            </ul>
        </nav>

       
