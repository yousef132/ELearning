@model E_Learning.Models.AssignmentViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "_InstructorLayout";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimedEntity.Open" class="control-label"></label>
                <input asp-for="TimedEntity.Open" class="form-control" />
                <span asp-validation-for="TimedEntity.Open" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimedEntity.Close" class="control-label"></label>
                <input asp-for="TimedEntity.Close" class="form-control" />
                <span asp-validation-for="TimedEntity.Close" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimedEntity.Grade" class="control-label"></label>
                <input asp-for="TimedEntity.Grade" class="form-control" />
                <span asp-validation-for="TimedEntity.Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input hidden asp-for="CourseId" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
