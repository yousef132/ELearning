@model E_Learning.Models.AssignmentViewModel

@{
    Layout = "_InstructorLayout";
}

<!DOCTYPE html>


<body>

    <h4>AssignmentViewModel</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Update" asp-controller="Assignment">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <input asp-for="CourseId" type="hidden" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TimedEntity.Open" class="control-label"></label>
                    <input asp-for="TimedEntity.Open" class="form-control" />
                    <span asp-validation-for="TimedEntity.Open" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TimedEntity.Close" class="control-label"></label>
                    <input asp-for="TimedEntity.Close" class="form-control" />
                    <span asp-validation-for="TimedEntity.Close" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>


    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
